{% extends 'base.html.twig' %}

{% block title %}Sandrine COUPART - Me contacter{% endblock %}

{% block body %}
    <div class="position-relative">
                <img src='
        {% if app.user %}
            {{ asset('img/espace_connecter_header.jpg') }}
        {% else %}
            {{ asset('img/header.jpg') }}
        {% endif %}
        ' style="width:100%; height:350px; object-fit:cover; opacity:.6" alt="">
        <div class="position-absolute top-50 start-50 text-center fs-1 translate-middle fw-bold" style="color:#0C0920">
            <span class="display-2 fw-bold" style="font-family: 'Baloo Bhaina 2', cursive;">Me contacter</span>
        </div>
    </div>

    <div class="container my-4 w-50">
        <form>
            <div class="mb-3">
                <label for="email" class="form-label">Votre email</label>
                <input type="email" class="form-control bg-light" placeholder= "Entrez votre email">
            </div>
            <div class="mb-3">
                <label for="objet" class="form-label">Objet de votre demande</label>
                <input type="text" class="form-control bg-light" placeholder="Saisissez l'objet de votre demande">
            </div>
            <div class="form-floating">
                <p class="form-label">Votre message</p>
                <textarea class="form-control bg-light" style="height: 350px; resize:none"></textarea>
            </div>

            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-success my-4">Envoyer</button>
            </div>

        </form>
    </div>


{% endblock %}