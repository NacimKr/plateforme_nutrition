{% extends 'base.html.twig' %}

{% block title %}Sandrine COUPART - Pour qui ? Pour quoi ?{% endblock %}

{% block body %}
<div class="position-relative">
            <img src='
        {% if app.user %}
            {{ asset('img/espace_connecter_header.jpg') }}
        {% else %}
            {{ asset('img/header.jpg') }}
        {% endif %}
        ' style="width:100%; height:350px; object-fit:cover; opacity:.6" alt="">
    <div class="position-absolute top-50 start-50 text-center fs-1 translate-middle fw-bold" style="color:#0C0920">
        <span class="display-2 fw-bold" style="font-family: 'Baloo Bhaina 2', cursive;">Pour qui ? Pour quoi ?</span>
    </div>
</div>

<div class="d-flex flex-wrap justify-content-center gap-3 mt-4">
    {% set concerne = ["Troubles digestifs", "Pathologie necessitant un suivi nutrionnel", 
    "Insuffisance rénale", "Péri ménopause et ménopause", "Fatigue", 'Troubles comportement alimentaire',
    "Sportifs", "Prise de poids", "Equilibre aliemntaire pour enfants", "Grossesse", "Prevention des maladies cardio vasculaire",
    "Perte et régulation de poids", "Diabète", "Equilibre aliemntaire pour tous", "Prévention santé"] %}
    {% for i in 0..14 %}
        <div class="card m-2" style="width: 20.1rem;">
            {# <div class="card-body"> #}
                <img src="{{asset('img/img'~i~'.jpg')}}"  style="width:20rem" alt="" class="rounded-top" />
                <p class="card-text text-center my-2" style="font-family: 'Noto Sans', sans-serif;">
                    {{ concerne[i] }}
                </p>
            {# </div> #}
        </div>
    {% endfor %}
</div>


{% endblock %}
