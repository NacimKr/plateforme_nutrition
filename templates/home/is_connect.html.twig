{% extends 'base.html.twig' %}

{% block title %}Sandrine COUPART - Bienvenue sur votre espace {{ app.user.username }}{% endblock %}

{% block body %}
<div class="position-relative">
            <img src='
        {% if app.user %}
            {{ asset('img/espace_connecter_header.jpg') }}
        {% else %}
            {{ asset('img/header.jpg') }}
        {% endif %}
        ' style="width:100%; height:350px; object-fit:cover; opacity:.6" alt="">
    <div class="position-absolute top-50 start-50 text-center fs-1 translate-middle fw-bold" style="color:#0C0920">
        <span class="display-2 fw-bold" style="font-family: 'Baloo Bhaina 2', cursive;">
        {% if app.user.username == "SandrineAdmin09**" %}
            Que souhaitez-vous faire ?
        {% else %}
            Consultez vos recettes
        {% endif %}
        </span>
    </div>
</div>

<div class="container">
    {% for message in app.flashes('notice') %}
        <div class="flash-notice">
            <div class="alert alert-dismissible alert-success">
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                <strong>{{ message }}</strong>
            </div>
        </div>
    {% endfor %}
</div>



<div class="container">
    {% for message in app.flashes('notice') %}
        <div class="flash-notice">
            <div class="alert alert-dismissible alert-success">
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                <strong>{{ message }}</strong>
            </div>
        </div>
    {% endfor %}
</div>

{% if app.user.username == "SandrineAdmin09**" %}
    <a href="{{path('app_register')}}" class="btn text-light d-block my-4 col-lg-3 col-md-5 col-sm-6 mx-auto" style="font-size:20px; background:#DC9A7D">Cr√©er un patient</a>
    <a href="{{path('app_voir_touts_les_recettes')}}" class="btn text-light d-block my-4 col-lg-3 col-md-5 col-sm-6 mx-auto" style="font-size:20px; background:#DC9A7D">Voir toutes les recettes</a>
    <a href="{{path('app_add_recettes')}}" class="btn text-light d-block my-4 col-lg-3 col-md-5 col-sm-6 mx-auto" style="font-size:20px; background:#DC9A7D">Ajouter une recette</a>
{% else %}
    <a href="{{path('app_is_connect_user')}}" class="btn text-light d-block m-4 w-25 mx-auto" style="font-size:20px; background:#DC9A7D">Voir mes recettes</a>
{% endif %}

{% endblock %}