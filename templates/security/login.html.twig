{% extends 'base.html.twig' %}

{% block title %}Sandrine COUPART - Connexion{% endblock %}

{% block body %}
<div class="position-relative">
            <img src='
        {% if app.user %}
            {{ asset('img/espace_connecter_header.jpg') }}
        {% else %}
            {{ asset('img/header.jpg') }}
        {% endif %}
        ' style="width:100%; height:350px; object-fit:cover; opacity:.6" alt="">
    <div class="position-absolute top-50 start-50 text-center fs-1 translate-middle fw-bold" style="color:#0C0920">
        <span class="display-2 fw-bold" style="font-family: 'Baloo Bhaina 2', cursive;">Accédez à votre espace {{ last_username }}</span>
    </div>
</div>


<div class="container my-5 col-lg-3 col-md-8 col-sm-10 bg-light rounded shadow-lg p-4 mb-5 rounded" id="bloc_connection">
        
    {% if app.user %}
        <div class="mb-3">
            Vous êtes bien connecté <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <form action="{{path('app_login')}}" method="post">
        <h1 class="h3 my-4 font-weight-normal text-center fs-1" style="font-family: 'Baloo Bhaina 2', cursive;">Connectez-vous</h1>
        
        <label for="username" style="font-family: 'Baloo Bhaina 2', cursive;">Votre nom d'utilisateur</label>
        <input type="text" class="form-control" required name="_username">
        
        <label for="password" class="mt-3" style="font-family: 'Baloo Bhaina 2', cursive;">Votre mot de passe</label>
        <input type="password" class="form-control" required name="_password">

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <div class="d-flex justify-content-center">
            <input class="btn btn-success mt-3" type="submit" value="Connexion"></input>
        </div>
    </form>


</div>
{% endblock %}